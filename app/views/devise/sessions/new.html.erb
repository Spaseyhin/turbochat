<div class="row", style="margin-top: 10%;">
  <center>
    <div class="col-2">
      <h1 class="h3 mb-3 fw-normal">Sign in</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password confirmation" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions", style="margin-top:5%">
        <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </center>
</div>


